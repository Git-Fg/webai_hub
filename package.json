{
  "name": "ai-hybrid-hub-monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "//--- TYPESCRIPT ---//": "",
    "build:ts": "pnpm --filter @ai-hub/bridge build",
    "validate:ts": "pnpm --filter @ai-hub/bridge validate:ts",
    "//--- FLUTTER ---//": "",
    "build:dart": "flutter pub run build_runner build --delete-conflicting-outputs",
    "validate:flutter": "flutter analyze && flutter test",
    "//--- GLOBAL QUALITY GATE ---//": "",
    "test:ci": "pnpm install && pnpm run validate:ts && pnpm run build:dart && pnpm run validate:flutter"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
